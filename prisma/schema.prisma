generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String?             @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               String              @default("USER")
  inboxNotifications Boolean             @default(true)
  encryptedBalance   String?
  accounts           Account[]
  sessions           Session[]
  drafts             Draft[]
  letters            Letter[]            @relation("SentLetters")
  receivedLetters    Letter[]            @relation("ReceivedLetters")
  incomingLetters    IncomingLetter[]
  addresses          Address[]
  creditTransactions CreditTransaction[]
  giftOrders         GiftOrder[]
  comments           Comment[]
  firstCommentRewardReceived   Boolean             @default(false)
  secondLetterRewardReceived  Boolean             @default(false)
  referralCode                String?             @unique
  referredById                String?
  referredBy                  User?               @relation("UserReferrals", fields: [referredById], references: [id])
  referredUsers               User[]              @relation("UserReferrals")
}

model Address {
  id          String  @id @default(cuid())
  userId      String
  user        User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String // e.g. "Ev Adresim", "İş Yeri"
  name        String // Alıcı Ad Soyad
  city        String // Şehir
  addressText String // Detaylı Adres
  phone       String? // Telefon (opsiyonel)

  // Prison specific fields
  isPrison   Boolean @default(false)
  prisonName String?
  fatherName String?
  wardNumber String?
  prisonNote String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Draft {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  data      Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Letter {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation("SentLetters", fields: [userId], references: [id], onDelete: Cascade)
  receiverId   String?
  receiver     User?    @relation("ReceivedLetters", fields: [receiverId], references: [id], onDelete: SetNull)
  data         Json
  status       String   @default("PAID") // PENDING, PAID, PREPARING, SHIPPED, COMPLETED
  senderName   String?
  receiverName String?
  receiverCity String?
  totalAmount  Float?
  trackingCode String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model GiftCategory {
  id        String   @id @default(cuid())
  name      String
  order     Int      @default(0)
  gifts     Gift[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Gift {
  id          String       @id @default(cuid())
  name        String
  description String?      @db.Text
  price       Float?
  image       String?
  order       Int          @default(0)
  categoryId  String
  category    GiftCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orders      GiftOrder[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model IncomingLetter {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  images      String[] // Artık tek resim yerine birden fazla resim URL'si tutacak
  description String?  @db.Text
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSetting {
  key       String   @id
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model CreditTransaction {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount      Float
  type        String // DEPOSIT, SPEND, REFUND, vb.
  description String
  referenceId String? // İlgili mektup vb. nesnenin ID'si
  createdAt   DateTime @default(now())
}

model GiftOrder {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId       String
  gift         Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)
  
  // Gönderici bilgileri
  senderName   String?
  senderCity   String?
  senderAddress String?

  // Sipariş detayı (Alıcı bilgileri)
  receiverName String
  addressText  String
  city         String?
  phone        String?
  
  // Cezaevi Detayları
  isPrison     Boolean  @default(false)
  prisonName   String?
  fatherName   String?
  wardNumber   String?
  prisonNote   String?

  notes        String?  @db.Text
  
  pricePaid    Float    // Düşülen kredi
  status       String   @default("PAID") // PAID, PREPARING, SHIPPED, COMPLETED
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String?
  body      String   @db.Text
  rating    Int      @default(5)
  
  // Self-relation for replies
  parentId  String?
  parent    Comment? @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
